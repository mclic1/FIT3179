{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Population VS Land Size (2017)",
  "data": {
    "url": "https://raw.githubusercontent.com/mclic1/FIT3179/main/Population%20density%20nonull.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "selection": {"grid": {"type": "interval", "bind": "scales"}},
  "mark": {"type": "point"},
  "encoding": {
    "x": {
      "field": "LandSizeSqKm",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"tickCount": 6, "grid": false},
      "title": "Land Size (sq. km)"
    },
    "y": {
      "field": "PopulationCurrent",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {
        "tickCount": 6,
        "grid": false,
        "title": "Population (2017)"
      }
    },
    "size": {"value": 90},
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#D62728", "#9467BD"]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "PopulationCurrent",
        "type": "nominal",
        "title": "Population (2017)",
        "legend": {"format": ".3s"}
      },
      {
        "field": "LandSizeSqKm",
        "type": "quantitative",
        "title": "Land Size (sq. km)",
        "format": ",.0f"
      },
      {
        "field": "2017",
        "format": ",.2f",
        "type": "quantitative",
        "title": "Population Density per sq. km"
      }
    ]
  },
  "config": {}
}
