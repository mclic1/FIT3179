{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/mclic1/FIT3179/main/worldmap.json",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "projection": {"type": "equalEarth"},
  "transform": [
    {
      "lookup": "properties.iso_a3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mclic1/FIT3179/main/Population%20density.csv",
          "format": {"type": "csv"}
        },
        "key": "CountryCode",
        "fields": ["2018"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "condition": {"test": "datum['2018'] == 0", "value": "darkgrey"},
      "field": "2018",
      "scale": {
        "type": "threshold",
        "domain": [5, 10, 25, 50, 100, 200, 300, 400, 500, 1000, 1500],
        "scheme": "purples"
      },
      "type": "quantitative",
      "title": "Population density per sq. km"
    },
    "tooltip": [
      {"field": "properties.admin", "type": "nominal", "title": "Country"},
      {
        "field": "2018",
        "format": ".2f",
        "type": "quantitative",
        "title": "Population Density per sq. km"
      }
    ]
  },
  "config": {}
}
