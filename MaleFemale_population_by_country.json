      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mclic1/FIT3179/main/Popdensity_timeseries.csv",
          "format": {"type": "csv"}
        },
        "key": "Country Code",
        "fields": ["Population"]
      }
    },
    {
      "filter": "Country_selection == null || datum['Country Name'] == Country_selection"
    },
    {
      "calculate": "(datum['PopulationCategory'] == 0 ? null :  datum['PopulationCategory'])",
      "as": "Population_"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {"grid": false}
    },
    "y": {
      "aggregate": "sum",
      "field": "Population_",
      "axis": {"format": ",.1s"},
      "title": "Population"
    }
  },
  "layer": [
    {
      "mark": {"type": "area"},
      "encoding": {
        "color": {
          "field": "Indicator Name",
          "type": "nominal",
          "scale": {"range": ["#FFB347", "#3e5496"]},
          "title": "Population Segment"
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Population_",
            "type": "quantitative",
            "title": "Population Segment (currently hovering)",
            "format": ".3s"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": -15,
        "fontSize": 11.5,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Population", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {"test": "datum['Year'] == '2015'", "value": 1},
          "value": 0
        }
      }
    }
  ],
