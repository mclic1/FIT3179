{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 600,
  "height": 400,
  "title": "Population VS Land Size (2017)",
  "data": {
    "url": "https://raw.githubusercontent.com/mclic1/FIT3179/main/Population%20density%20nonull.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "LandSizeSqKm",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"tickCount": 6, "grid": false},
      "title": "Land Size (sq. km)"
    },
    "y": {
      "field": "PopulationCurrent",
      "type": "quantitative",
      "scale": {"type": "log"},
      "axis": {"tickCount": 6, "grid": false, "title": "Population (2017)"}
    }
  },
  "layer": [
    {
      "selection": {"grid": {"type": "interval", "bind": "scales"}},
      "mark": {"type": "point"},
      "encoding": {
          "size": {"field": "2017", "type": "quantitative", "scale": {"type": "threshold", "domain": [5,10,50,100,200,500,1000,5000,10000], "range": [50,70,100,120,150,250,300,450,600,700,800,1000,2000], "rangeMin": 10, "rangeMax": 1000}, "title": "Population Density (per sq. km)"},
       
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": ["#b491c8", "#ffc0cb", "#2ca02c", "#D62728", "#FACA0F"]
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "PopulationCurrent",
            "type": "nominal",
            "title": "Population (2017)",
            "legend": {"format": ".3s"}
          },
          {
            "field": "LandSizeSqKm",
            "type": "quantitative",
            "title": "Land Size (sq. km)",
            "format": ",.0f"
          },
          {
            "field": "2017",
            "format": ",.2f",
            "type": "quantitative",
            "title": "Population Density per sq. km"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 20, "dy": -15,
        "fontSize": 11.5,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Monaco' || datum['Country'] == 'Greenland' || datum['Country'] == 'China' || datum['Country'] == 'Australia' || datum['Country'] == 'Macao SAR, China' || datum['Country'] == 'Bangladesh' || datum['Country'] == 'India' || datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        }
        
      }
    }
  ],
  "config": {}
}
